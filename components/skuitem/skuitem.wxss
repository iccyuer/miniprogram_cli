/* compnents/skuitem.wxss */
.sku_list{
  width: 345rpx;
  height: 484rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx 0 0 20rpx;
  /* float: left; */
  display: inline-block;
  position: relative;
}
.sku_list image.heading{
  width: 345rpx;
  height: 300rpx;
  border-radius: 12rpx 12rpx 0 0;
}
.sku_list .sku_name{
  font-size: 30rpx;
  color: #2F2F30;
  height: 80rpx;
  display: block;
  margin: 15rpx 30rpx 0 30rpx;
  line-height: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2; 
  -webkit-box-orient: vertical;
  word-break:break-all;
}
.sku_list .price{
  display: inline-block;
  color: #B81A35;
  font-size: 44rpx;
  font-weight: bold;
}
.sku_list .font_small{
  font-size: 26rpx;
  font-weight: normal;
  color: #B81A35;
  margin-left: 30rpx;
  display: inline-block;
}
.sku_list .price_gray{
  color: #919194;
  text-decoration:line-through;
  display: inline-block;
  font-size: 22rpx;
  margin-left: 10rpx;
  position: relative;
  top: -4rpx;
}
.mask_img{
	background: rgba(0, 0, 0, 0.7);
	width: 345rpx;
	height: 300rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.mask_img .sell_img{
	width: 207rpx;
	height: 180rpx;
	display: block;
	margin: 70rpx auto;
}
.time_start{
    position: absolute;
    width: 345rpx;
    height: 52rpx;
    top: 249rpx;
    background: rgba(184, 26, 53, .6);
    font-size: 25rpx;
    color: #fff;
    text-align: center;
    line-height: 52rpx;
}